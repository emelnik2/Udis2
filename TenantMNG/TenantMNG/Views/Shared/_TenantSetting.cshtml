
@model TenantMNG.ViewModel.TenantVM



@using (Html.BeginForm("SetupTenantSetting", "User", FormMethod.Post, new { @class = "form-horizontal", @id = "formsetting" }))
{

    <div class="alert alert-success" id="divSuccess_setting" style="display:none">
        @TenantMNG.Resource.msg_save_setting
    </div>

    <div class="alert alert-danger" id="divFail_setting" style="display:none">
        @TenantMNG.Resource.msg_global_fail
    </div>

    <div class="span5" style="margin-left:0px">
        <div class="control-group">
            @*@Html.Label(m => m.tenantsetting.dec_demanda_fac new { @class = "control-label" })*@
            <label class="control-label">@TenantMNG.Resource.demand_fact</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.tenantsetting.dec_demanda_facturable, new { @class = "span12", @id = "txt_demand" })
                @Html.ValidationMessageFor(m => m.tenantsetting.dec_demanda_facturable)
            </div>
        </div>
    </div>
    <div class="span5">
        <div class="control-group">
            @*@Html.LabelFor(m => m.tenantsetting.dec_total_ene, new { @class = "control-label" })*@
            <label class="control-label">@TenantMNG.Resource.total_energy</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.tenantsetting.dec_total_ene, new { @class = "span12", @id = "txt_total" })
                @Html.ValidationMessageFor(m => m.tenantsetting.dec_total_ene)
            </div>
        </div>
    </div>
    <div class="clearfix"></div>


    @Html.HiddenFor(m => m.tenantsetting.int_id, new { @id = "setting_id" })
    <br />

    <div class="form-actions">
        @*<input type="submit" class="btn btn-success" value="Save" />*@
        <input type="button" id="btnsavesetting"
               value="@TenantMNG.Resource.save_info" class="btn btn-success" />


        @Html.ActionLink(TenantMNG.Resource.cancel, "Tenant", Session["utypeid"].ToString() == "2" ? "PM" : "User", null, new { @class = "btn btn-default" })

    </div>
}






