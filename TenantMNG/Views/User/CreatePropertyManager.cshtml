@model TenantMNG.ViewModel.UserMasterVM
@{
    ViewBag.Title = TenantMNG.Core.CommonCls._applicationname + " : Create Property Manager";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Dashboard", "Admin")" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> @TenantMNG.Resource.home</a> <a href="@Url.Action("PropertyManager", "User")" class="tip-bottom">@TenantMNG.Resource.pmuser</a> <a href="#" class="current">@TenantMNG.Resource.pm</a> </div>

</div>
<div class="container-fluid">

    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-align-justify"></i> </span>
                    <h5>@TenantMNG.Resource.create @TenantMNG.Resource.pm @TenantMNG.Resource.manager</h5>
                </div>
                <div class="widget-content nopadding">
                    @using (Html.BeginForm("CreatePropertyManager", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="span5" style="margin-left:0">
                            <div class="control-group">
                                @Html.LabelFor(m => m.str_comp_name, new { @class = "control-label" })

                                <div class="controls">
                                    @Html.TextBoxFor(m => m.str_comp_name, new { @class = "span12" })
                                    @Html.ValidationMessageFor(m => m.str_comp_name)
                                </div>
                            </div>
                        </div>
                        <div class="span5">
                            <div class="control-group">
                                @Html.LabelFor(m => m.str_contact_name, new { @class = "control-label" })

                                <div class="controls">
                                    @Html.TextBoxFor(m => m.str_contact_name, new { @class = "span12" })
                                    @Html.ValidationMessageFor(m => m.str_contact_name)
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="span5" style="margin-left:0">
                            <div class="control-group">
                                @Html.LabelFor(m => m.str_add_1, new { @class = "control-label" })

                                <div class="controls">
                                    @Html.TextBoxFor(m => m.str_add_1, new { @class = "span12" })
                                </div>
                            </div>
                        </div>
                        <div class="span5">
                            <div class="control-group">
                                @Html.LabelFor(m => m.str_add_2, new { @class = "control-label" })

                                <div class="controls">
                                    @Html.TextBoxFor(m => m.str_add_2, new { @class = "span12" })
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="span5" style="margin-left:0">
                            <div class="control-group">
                                @Html.LabelFor(m => m.str_city, new { @class = "control-label" })

                                <div class="controls">
                                    @Html.TextBoxFor(m => m.str_city, new { @class = "span12" })
                                </div>
                            </div>
                        </div>
                        <div class="span5">
                            <div class="control-group">
                                @Html.LabelFor(m => m.str_state, new { @class = "control-label" })

                                <div class="controls">
                                    @Html.TextBoxFor(m => m.str_state, new { @class = "span12" })
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="span5" style="margin-left:0">
                            <div class="control-group">
                                @Html.LabelFor(m => m.str_country, new { @class = "control-label" })

                                <div class="controls">
                                    @Html.TextBoxFor(m => m.str_country, new { @class = "span12" })
                                </div>
                            </div>
                        </div>
                        <div class="span5">
                            <div class="control-group">
                                @Html.LabelFor(m => m.int_pin_code, new { @class = "control-label" })

                                <div class="controls">
                                    @Html.TextBoxFor(m => m.int_pin_code, new { @class = "span12" })
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="span5" style="margin-left:0px">
                            <div class="control-group">
                                @Html.LabelFor(m => m.str_email, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.str_email, new { @class = "span12" })
                                    @Html.ValidationMessageFor(m => m.str_email)
                                </div>
                            </div>
                        </div>
                        <div class="clearfix">
                        </div>
                        <div class="span5" style="margin-left:0px">
                            <div class="control-group">
                                @Html.LabelFor(m => m.str_user_name, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.TextBoxFor(m => m.str_user_name, new { @class = "span12" })
                                    @Html.ValidationMessageFor(m => m.str_user_name)
                                </div>
                            </div>
                        </div>
                        <div class="span5">
                            <div class="control-group">
                                @Html.LabelFor(m => m.str_password, new { @class = "control-label" })
                                <div class="controls">
                                    @Html.PasswordFor(m => m.str_password, new { @class = "span12", value = Model.str_password })
                                    @Html.ValidationMessageFor(m => m.str_password)
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        @*<div class="control-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                <div class="controls">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "span11" })
                </div>
            </div>*@
                        <br />
                        @Html.HiddenFor(m => m.int_id)
                        <div class="form-actions">
                            <input type="submit" class="btn btn-success" value="@TenantMNG.Resource.save" />
                            @Html.ActionLink(TenantMNG.Resource.cancel, "PropertyManager", "User", new { @class = "btn btn-default" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jqueryval");
